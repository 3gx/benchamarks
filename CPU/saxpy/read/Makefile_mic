CXX=icpc  -openmp
CXXFLAGS = -O3 -mmic 
#CXXFLAGS+=-no-opt-prefetch

ISPC=ispc
ISPCFLAGS =  -O3 --target=generic-16 --c++-include-file=../knc-i1x16.h
ISPCFLAGS+= --opt=force-aligned-memory

ARCH=mic
all: read_$(ARCH) $(ARCH)/read_ispc.s

read_$(ARCH): $(ARCH)/read_ispc.o read.cpp params.h
	$(CXX) $(CXXFLAGS)  -o $@ $^ -g

$(ARCH)/read_ispc.o: $(ARCH)/read_ispc.s
	$(CXX) $(CXXFLAGS) -c -o $@ $<

$(ARCH)/read_ispc.s: $(ARCH)/read_ispc.zmm.cpp
	if [ -f read_ispc_mic.s ]; then cp read_ispc_mic.s $@; else 	$(CXX) $(CXXFLAGS) -S -o $@ $<; fi

$(ARCH)/read_ispc.zmm.cpp: read.ispc params.h
	mkdir -p $(ARCH)
	$(ISPC) $(ISPCFLAGS) --emit-c++ -o $@ $<

run_compact: all
	MIC_KMP_AFFINITY=compact micrun ./read_$(ARCH) 1024000 1
	MIC_KMP_AFFINITY=compact micrun ./read_$(ARCH) 1024000 2
	MIC_KMP_AFFINITY=compact micrun ./read_$(ARCH) 1024000 4

run_scatter: all
	MIC_KMP_AFFINITY=scatter micrun ./read_$(ARCH) 1024000 1
	MIC_KMP_AFFINITY=scatter micrun ./read_$(ARCH) 1024000 2
	MIC_KMP_AFFINITY=scatter micrun ./read_$(ARCH) 1024000 4

clean:
	/bin/rm -rf read_$(ARCH)  $(ARCH)

clean_all:
	/bin/rm -rf read_$(ARCH) $(ARCH) *~
