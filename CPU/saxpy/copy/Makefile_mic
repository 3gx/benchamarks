CXX=icpc  -openmp
CXXFLAGS = -O3 -mmic 
#CXXFLAGS+=-no-opt-prefetch

ISPC=ispc
ISPCFLAGS =  -O3 --target=generic-16 --c++-include-file=../knc-i1x16.h
ISPCFLAGS+= --opt=force-aligned-memory

ARCH=mic
all: copy_$(ARCH) $(ARCH)/copy_ispc.s

copy_$(ARCH): $(ARCH)/copy_ispc.o copy.cpp params.h
	$(CXX) $(CXXFLAGS)  -o $@ $^ -g

$(ARCH)/copy_ispc.o: $(ARCH)/copy_ispc.s
	$(CXX) $(CXXFLAGS) -c -o $@ $<

$(ARCH)/copy_ispc.s: $(ARCH)/copy_ispc.zmm.cpp
	$(CXX) $(CXXFLAGS) -S -o $@ $<

$(ARCH)/copy_ispc.zmm.cpp: copy.ispc params.h
	mkdir -p $(ARCH)
	$(ISPC) $(ISPCFLAGS) --emit-c++ -o $@ $<

run_compact: all
	MIC_KMP_AFFINITY=compact micrun ./copy_$(ARCH) 10240 1
	MIC_KMP_AFFINITY=compact micrun ./copy_$(ARCH) 10240 2
	MIC_KMP_AFFINITY=compact micrun ./copy_$(ARCH) 10240 4

run_scatter: all
	MIC_KMP_AFFINITY=scatter micrun ./copy_$(ARCH) 10240 1
	MIC_KMP_AFFINITY=scatter micrun ./copy_$(ARCH) 10240 2
	MIC_KMP_AFFINITY=scatter micrun ./copy_$(ARCH) 10240 4

clean:
	/bin/rm -rf copy_$(ARCH)  $(ARCH)

clean_all:
	/bin/rm -rf copy_$(ARCH) $(ARCH) *~
