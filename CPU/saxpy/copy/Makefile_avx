CXX=icpc  -openmp
CXXFLAGS= -O3 -xavx 

ISPC=ispc
ISPCFLAGS =  -O3 --target=avx1-i32x8 
ISPCFLAGS+= --opt=force-aligned-memory

ARCH=avx
all: $(ARCH)/copy_ispc.s copy_$(ARCH)

copy_$(ARCH): $(ARCH)/copy_ispc.o copy.cpp params.h
	$(CXX) $(CXXFLAGS)  -o $@ $^ -g

$(ARCH)/copy_ispc.o: $(ARCH)/copy_ispc.s
	$(CXX) $(CXXFLAGS) -c -o $@ $<

$(ARCH)/copy_ispc.s: copy.ispc params.h
	mkdir -p $(ARCH)
	$(ISPC) $(ISPCFLAGS) --emit-asm  -o $@ $<

run_compact: all
	KMP_AFFINITY=compact ./copy_$(ARCH) 1024000 1
	KMP_AFFINITY=compact ./copy_$(ARCH) 1024000 2
	KMP_AFFINITY=compact ./copy_$(ARCH) 1024000 4

run_scatter: all
	KMP_AFFINITY=scatter ./copy_$(ARCH) 1024000 1
	KMP_AFFINITY=scatter ./copy_$(ARCH) 1024000 2
	KMP_AFFINITY=scatter ./copy_$(ARCH) 1024000 4

clean:
	/bin/rm -rf copy_$(ARCH)  $(ARCH)

clean_all:
	/bin/rm -rf copy_$(ARCH) $(ARCH) *~
