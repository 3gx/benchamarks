CXX=icpc  -openmp
CXXFLAGS = -O3 -mmic 
#CXXFLAGS+=-no-opt-prefetch

ISPC=ispc
ISPCFLAGS =  -O3 --target=generic-16 --c++-include-file=../knc-i1x16.h
ISPCFLAGS+= --opt=force-aligned-memory

ARCH=mic
all: saxpy_$(ARCH) $(ARCH)/saxpy_ispc.s

saxpy_$(ARCH): $(ARCH)/saxpy_ispc.o saxpy.cpp params.h
	$(CXX) $(CXXFLAGS)  -o $@ $^ -g

$(ARCH)/saxpy_ispc.o: $(ARCH)/saxpy_ispc.s
	$(CXX) $(CXXFLAGS) -c -o $@ $<

$(ARCH)/saxpy_ispc.s: $(ARCH)/saxpy_ispc.zmm.cpp
	$(CXX) $(CXXFLAGS) -S -o $@ $<

$(ARCH)/saxpy_ispc.zmm.cpp: saxpy.ispc params.h
	mkdir -p $(ARCH)
	$(ISPC) $(ISPCFLAGS) --emit-c++ -o $@ $<

run_compact: all
	MIC_KMP_AFFINITY=compact micrun ./saxpy_$(ARCH) 1024000 1
	MIC_KMP_AFFINITY=compact micrun ./saxpy_$(ARCH) 1024000 2
	MIC_KMP_AFFINITY=compact micrun ./saxpy_$(ARCH) 1024000 4

run_scatter: all
	MIC_KMP_AFFINITY=scatter micrun ./saxpy_$(ARCH) 1024000 1
	MIC_KMP_AFFINITY=scatter micrun ./saxpy_$(ARCH) 1024000 2
	MIC_KMP_AFFINITY=scatter micrun ./saxpy_$(ARCH) 1024000 4

clean:
	/bin/rm -rf saxpy_$(ARCH)  $(ARCH)

clean_all:
	/bin/rm -rf saxpy_$(ARCH) $(ARCH) *~
