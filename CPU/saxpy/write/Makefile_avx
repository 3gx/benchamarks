CXX=icpc  -openmp
CXXFLAGS= -O3 -xavx 

ISPC=ispc
ISPCFLAGS =  -O3 --target=avx1-i32x8 
ISPCFLAGS+= --opt=force-aligned-memory

ARCH=avx
all: $(ARCH)/write_ispc.s write_$(ARCH)

write_$(ARCH): $(ARCH)/write_ispc.o write.cpp params.h
	$(CXX) $(CXXFLAGS)  -o $@ $^ -g

$(ARCH)/write_ispc.o: $(ARCH)/write_ispc.s
	$(CXX) $(CXXFLAGS) -c -o $@ $<

$(ARCH)/write_ispc.s: write.ispc params.h
	mkdir -p $(ARCH)
	if [ -f write_ispc_avx.s ]; then cp write_ispc_avx.s $@; else $(ISPC) $(ISPCFLAGS) --emit-asm  -o $@ $<; fi

run_compact: all
	KMP_AFFINITY=compact ./write_$(ARCH) 1024000 1
	KMP_AFFINITY=compact ./write_$(ARCH) 1024000 2
	KMP_AFFINITY=compact ./write_$(ARCH) 1024000 4

run_scatter: all
	KMP_AFFINITY=scatter ./write_$(ARCH) 1024000 1
	KMP_AFFINITY=scatter ./write_$(ARCH) 1024000 2
	KMP_AFFINITY=scatter ./write_$(ARCH) 1024000 4

clean:
	/bin/rm -rf write_$(ARCH)  $(ARCH)

clean_all:
	/bin/rm -rf write_$(ARCH) $(ARCH) *~
